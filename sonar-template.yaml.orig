kind: Pod
metadata:
  name: "sonarqube-ui-test"
  annotations:
    "helm.sh/hook": test-success
  labels:
    app: sonarqube
    chart: sonarqube-5.2.1
    release: sonarqube
    heritage: Helm
spec:
  initContainers:
    - name: "test-framework"
      image: dduportal/bats:0.4.0
      command:
      - "bash"
      - "-c"
